<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".ProfileRegister">

    <TextView
        android:id="@+id/header1"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:inputType="textPersonName"
        android:text="Tell us about yourself"
        android:textAlignment="center"
        android:textColor="@color/colorOrangerPrimaryDark"
        android:textSize="30dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/header1"
        android:layout_marginTop="60dp">

        <EditText
            android:id="@+id/firstName"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:drawableLeft="@drawable/ic_person_white_24dp"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="First name"
            android:textColor="#fff"
            android:inputType="textPersonName"
            android:textColorHint="#FFF"/>

        <EditText
            android:id="@+id/lastName"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/ic_person_white_24dp"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="Last name"
            android:inputType="textPersonName"
            android:textColor="#fff"
            android:textColorHint="#FFF" />


        <Spinner
            android:id="@+id/position"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/ic_briefcase_24dp"
            android:drawablePadding="10dp"
            android:ems="10"
            android:prompt="@string/position"
            android:backgroundTint="#000000"
            android:drawableRight="@drawable/ic_arrow_down"
            android:inputType="textPersonName" />

        <Spinner
            android:id="@+id/location"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/ic_location_24dp"
            android:drawablePadding="10dp"
            android:ems="10"
            android:prompt="@string/location"
            android:backgroundTint="#000000"
            android:inputType="textPersonName" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/formLinearLayout"
        android:gravity="center_horizontal"
        android:layout_marginTop="420dp">
        <Button
            android:id="@+id/register"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginBottom="145dp"
            android:text="Register"
            android:textColor="@color/colorOrangerPrimaryDark"/>
    </LinearLayout>

</RelativeLayout>