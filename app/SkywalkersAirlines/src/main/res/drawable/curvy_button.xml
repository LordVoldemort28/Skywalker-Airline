<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners
                android:radius="15dp" />
            <stroke android:width="1dip" android:color="#d83801" />
            <gradient android:angle="-90" android:startColor="#cbd83801" android:endColor="#d83801"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners
                android:radius="15dp" />
            <stroke android:width="1dip" android:color="#cbd83801" />
            <solid android:color="#d83801"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners
                android:radius="15dp" />
            <stroke android:width="1dip" android:color="#cbd83801" />
            <gradient android:angle="-90" android:startColor="#d83801" android:endColor="#d83801" />
        </shape>
    </item>


</selector>