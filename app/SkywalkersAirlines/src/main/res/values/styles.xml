<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorOrangerPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorOrangerPrimaryDark</item>
        <item name="colorAccent">@color/colorOrangeSecondaryDark</item>
        <item name="android:textColorPrimary">#ffffff</item>
    </style>


    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorOrangerPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorOrangerPrimaryDark</item>
        <item name="colorAccent">@color/colorOrangeSecondaryDark</item>
        <item name="colorControlActivated">#FFF</item>
        <item name="colorControlNormal">#FFF</item>
        <item name="colorControlHighlight">#FFF</item>

    </style>


    <style name="SwitchTheme" parent="Theme.AppCompat.Light">
        <item name="android:colorControlActivated">@color/colorOrangerPrimaryDark</item>
    </style>


</resources>
